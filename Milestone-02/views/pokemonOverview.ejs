<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Pokémon Overview</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container">
    <h1>Pokémon Overview</h1>
    
    <!-- Filter, Sort, and Hide Fields Form -->
    <form action="/pokemon" method="get">
      <label for="filterName">Filter by Name:</label>
      <input type="text" id="filterName" name="filterName" value="<%= filterName %>">   
      <label for="hiddenFields">Hide Fields (comma-separated, e.g. description,age):</label>
      <input type="text" id="hiddenFields" name="hiddenFields" value="<%= hiddenFields.join(',') %>">
      
      <button type="submit">Apply</button>
    </form>
    
    <!-- Pokémon Table with Clickable Headers for Sorting -->
    <table>
      <thead>
        <tr>
          <% if (!hiddenFields.includes('id')) { %>
            <th>
              <a href="/pokemon?<%= "filterName=" + encodeURIComponent(filterName) +
                    "&sortField=id&sortDirection=" + ((sortField === 'id' && sortDirection === 'asc') ? 'desc' : 'asc') +
                    "&hiddenFields=" + encodeURIComponent(hiddenFields.join(',')) %>">
                ID<% if (sortField === 'id') { %> <%= sortDirection === 'asc' ? '▲' : '▼' %><% } %>
              </a>
            </th>
          <% } %>
          <% if (!hiddenFields.includes('name')) { %>
            <th>
              <a href="/pokemon?<%= "filterName=" + encodeURIComponent(filterName) +
                    "&sortField=name&sortDirection=" + ((sortField === 'name' && sortDirection === 'asc') ? 'desc' : 'asc') +
                    "&hiddenFields=" + encodeURIComponent(hiddenFields.join(',')) %>">
                Name<% if (sortField === 'name') { %> <%= sortDirection === 'asc' ? '▲' : '▼' %><% } %>
              </a>
            </th>
          <% } %>
          <% if (!hiddenFields.includes('description')) { %>
            <th>
              <a href="/pokemon?<%= "filterName=" + encodeURIComponent(filterName) +
                    "&sortField=description&sortDirection=" + ((sortField === 'description' && sortDirection === 'asc') ? 'desc' : 'asc') +
                    "&hiddenFields=" + encodeURIComponent(hiddenFields.join(',')) %>">
                Description<% if (sortField === 'description') { %> <%= sortDirection === 'asc' ? '▲' : '▼' %><% } %>
              </a>
            </th>
          <% } %>
          <% if (!hiddenFields.includes('age')) { %>
            <th>
              <a href="/pokemon?<%= "filterName=" + encodeURIComponent(filterName) +
                    "&sortField=age&sortDirection=" + ((sortField === 'age' && sortDirection === 'asc') ? 'desc' : 'asc') +
                    "&hiddenFields=" + encodeURIComponent(hiddenFields.join(',')) %>">
                Age<% if (sortField === 'age') { %> <%= sortDirection === 'asc' ? '▲' : '▼' %><% } %>
          <% } %>
          <% if (!hiddenFields.includes('rarity')) { %>
            <th>
              <a href="/pokemon?<%= "filterName=" + encodeURIComponent(filterName) +
                    "&sortField=rarity&sortDirection=" + ((sortField === 'rarity' && sortDirection === 'asc') ? 'desc' : 'asc') +
                    "&hiddenFields=" + encodeURIComponent(hiddenFields.join(',')) %>">
                Rarity<% if (sortField === 'rarity') { %> <%= sortDirection === 'asc' ? '▲' : '▼' %><% } %>
              </a>
            </th>
          <% } %>
          <% if (!hiddenFields.includes('trainer')) { %>
            <th>
              <a href="/pokemon?<%= "filterName=" + encodeURIComponent(filterName) +
                    "&sortField=trainer&sortDirection=" + ((sortField === 'trainer' && sortDirection === 'asc') ? 'desc' : 'asc') +
                    "&hiddenFields=" + encodeURIComponent(hiddenFields.join(',')) %>">
                Trainer<% if (sortField === 'trainer') { %> <%= sortDirection === 'asc' ? '▲' : '▼' %><% } %>
              </a>
            </th>
          <% } %>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% pokemons.forEach(pokemon => { %>
          <tr>
            <% if (!hiddenFields.includes('id')) { %><td><%= pokemon.id %></td><% } %>
            <% if (!hiddenFields.includes('name')) { %><td><%= pokemon.name %></td><% } %>
            <% if (!hiddenFields.includes('description')) { %><td><%= pokemon.description %></td><% } %>
            <% if (!hiddenFields.includes('age')) { %><td><%= pokemon.age %></td><% } %>
            <% if (!hiddenFields.includes('rarity')) { %><td><%= pokemon.rarity %></td><% } %>
            <% if (!hiddenFields.includes('trainer')) { %><td><%= pokemon.trainerAffiliation.name %></td><% } %>
            <td><a href="/pokemon/<%= pokemon.id %>">View Details</a></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
